<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaResourceEditor.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:AvaloniaResourceEditor.Models"
        xmlns:converters="clr-namespace:AvaloniaResourceEditor.Views.Converters"
        xmlns:dataTemplates="clr-namespace:AvaloniaResourceEditor.Views.DataTemplates"
        xmlns:tabs="clr-namespace:AvaloniaResourceEditor.Views.Tabs"
        xmlns:viewModels="clr-namespace:AvaloniaResourceEditor.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="AvaloniaResourceEditor.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaResourceEditor"
        x:DataType="viewModels:ShellViewModel">
        <Design.DataContext>
                <vm:ShellViewModel/>
        </Design.DataContext>
        <TabControl>
                <TabItem Header="Редагувати">
                        <tabs:MainTab DataContext="{Binding MainViewModel  }"/>
                </TabItem>
                <TabItem Header="Обрати">
                        <tabs:SelectTab DataContext="{Binding  SelectViewModel  }"/>
                </TabItem>
        </TabControl>
</Window>
